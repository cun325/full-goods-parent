    <select id="calculateMonthlyGrowth" resultType="java.lang.Double">
        SELECT 
            CASE 
                WHEN last_month_count = 0 THEN 100.0
                ELSE ROUND(((this_month_count - last_month_count) / last_month_count) * 100, 2)
            END as growth_rate
        FROM (
            SELECT 
                COUNT(CASE WHEN YEAR(create_time) = YEAR(CURDATE()) AND MONTH(create_time) = MONTH(CURDATE()) THEN 1 END) as this_month_count,
                COUNT(CASE WHEN YEAR(create_time) = YEAR(DATE_SUB(CURDATE(), INTERVAL 1 MONTH)) AND MONTH(create_time) = MONTH(DATE_SUB(CURDATE(), INTERVAL 1 MONTH)) THEN 1 END) as last_month_count
            FROM t_order
        ) as monthly_stats
    </select>
    
