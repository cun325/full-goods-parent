    <select id="selectByConditionsWithPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_order
        <where>
            <if test="search != null and search != ''">
                AND (
                    order_no LIKE CONCAT('%', #{search}, '%')
                    OR receiver_name LIKE CONCAT('%', #{search}, '%')
                    OR receiver_phone LIKE CONCAT('%', #{search}, '%')
                )
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

