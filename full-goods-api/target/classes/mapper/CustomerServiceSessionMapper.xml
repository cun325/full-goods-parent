    <select id="selectWaitingByType" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_customer_service_session
        WHERE session_type = #{sessionType} AND status = 1
