<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.api.mapper.FlashSaleMapper">

    <resultMap id="BaseResultMap" type="org.example.common.entity.FlashSale">
        <id column="id" property="id"/>
        <result column="fruit_id" property="fruitId"/>
        <result column="original_price" property="originalPrice"/>
        <result column="sale_price" property="salePrice"/>
        <result column="discount_rate" property="discountRate"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="stock" property="stock"/>
        <result column="sold_count" property="soldCount"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <resultMap id="FlashSaleVOResultMap" type="org.example.api.vo.FlashSaleVO">
        <id column="id" property="id"/>
        <result column="fruit_id" property="fruitId"/>
        <result column="fruit_name" property="fruitName"/>
        <result column="image_url" property="imageUrl"/>
        <result column="description" property="description"/>
        <result column="original_price" property="originalPrice"/>
        <result column="sale_price" property="salePrice"/>
        <result column="discount_rate" property="discountRate"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="stock" property="stock"/>
        <result column="sold_count" property="soldCount"/>
        <result column="status" property="status"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, fruit_id, original_price, sale_price, discount_rate, start_time, end_time, stock, sold_count, status,
        create_time, update_time, create_by, update_by, remark
    </sql>

    <select id="selectActiveFlashSales" resultMap="FlashSaleVOResultMap">
        SELECT
            fs.id,
            fs.fruit_id,
            f.name as fruit_name,
            f.image_url,
            f.description,
            fs.original_price,
            fs.sale_price,
            fs.discount_rate,
            fs.start_time,
            fs.end_time,
            fs.stock,
            fs.sold_count,
            fs.status
        FROM t_flash_sale fs
        LEFT JOIN t_fruit f ON fs.fruit_id = f.id
        WHERE fs.status = 1
          AND fs.start_time &lt;= NOW()
          AND fs.end_time &gt;= NOW()
          AND f.status = 1
        ORDER BY fs.create_time DESC
    </select>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_flash_sale
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="org.example.common.entity.FlashSale" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_flash_sale
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fruitId != null">fruit_id,</if>
            <if test="originalPrice != null">original_price,</if>
            <if test="salePrice != null">sale_price,</if>
            <if test="discountRate != null">discount_rate,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="stock != null">stock,</if>
            <if test="soldCount != null">sold_count,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fruitId != null">#{fruitId},</if>
            <if test="originalPrice != null">#{originalPrice},</if>
            <if test="salePrice != null">#{salePrice},</if>
            <if test="discountRate != null">#{discountRate},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="stock != null">#{stock},</if>
            <if test="soldCount != null">#{soldCount},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="update" parameterType="org.example.common.entity.FlashSale">
        UPDATE t_flash_sale
        <set>
            <if test="fruitId != null">fruit_id = #{fruitId},</if>
            <if test="originalPrice != null">original_price = #{originalPrice},</if>
            <if test="salePrice != null">sale_price = #{salePrice},</if>
            <if test="discountRate != null">discount_rate = #{discountRate},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="stock != null">stock = #{stock},</if>
            <if test="soldCount != null">sold_count = #{soldCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateSoldCount">
        UPDATE t_flash_sale
        SET sold_count = sold_count + #{quantity}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM t_flash_sale WHERE id = #{id}
    </delete>
</mapper>