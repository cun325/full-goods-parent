<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.api.mapper.RecommendHistoryMapper">

    <resultMap id="BaseResultMap" type="org.example.common.entity.RecommendHistory">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="condition" property="condition" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, `condition`, create_time
    </sql>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_recommend_history
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <insert id="insert" parameterType="org.example.common.entity.RecommendHistory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_recommend_history
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="condition != null">`condition`,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="condition != null">#{condition},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <delete id="deleteByUserId" parameterType="java.lang.Long">
        DELETE FROM t_recommend_history WHERE user_id = #{userId}
    </delete>
    
    <delete id="deleteByIds">
        DELETE FROM t_recommend_history WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>