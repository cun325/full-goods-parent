<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.api.mapper.MessageTemplateMapper">

    <resultMap id="BaseResultMap" type="org.example.common.entity.MessageTemplate">
        <id column="id" property="id" />
        <result column="code" property="templateCode" />
        <result column="name" property="templateName" />
        <result column="message_type" property="messageType" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="icon_url" property="iconUrl" />
        <result column="link_template" property="linkTemplate" />
        <result column="status" property="status" />
        <result column="description" property="description" />
        <result column="params_desc" property="paramDescription" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
        <result column="remark" property="remark" />
    </resultMap>

    <sql id="Base_Column_List">
        id, code, name, message_type, title, content, icon_url, link_template, status,
        description, params_desc, create_time, update_time, create_by, update_by, remark
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        WHERE id = #{id}
    </select>

    <select id="selectByCode" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        WHERE code = #{code}
    </select>

    <select id="selectByMessageType" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        WHERE message_type = #{messageType}
        ORDER BY create_time DESC
    </select>

    <select id="selectEnabled" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        WHERE status = 1
        ORDER BY create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        ORDER BY create_time DESC
    </select>

    <select id="selectWithPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        <where>
            <if test="messageType != null">AND message_type = #{messageType}</if>
            <if test="status != null">AND status = #{status}</if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectByConditionWithPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_message_template
        <where>
            <if test="messageType != null">AND message_type = #{messageType}</if>
            <if test="status != null">AND status = #{status}</if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM t_message_template
    </select>

    <select id="countByCondition" resultType="int">
        SELECT COUNT(*)
        FROM t_message_template
        <where>
            <if test="messageType != null">AND message_type = #{messageType}</if>
            <if test="status != null">AND status = #{status}</if>
        </where>
    </select>

    <select id="existsByCode" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM t_message_template
        WHERE code = #{code}
        <if test="id != null">AND id != #{id}</if>
    </select>

    <insert id="insert" parameterType="org.example.common.entity.MessageTemplate" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_message_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="templateCode != null">code,</if>
            <if test="templateName != null">name,</if>
            <if test="messageType != null">message_type,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="iconUrl != null">icon_url,</if>
            <if test="linkTemplate != null">link_template,</if>
            <if test="status != null">status,</if>
            <if test="description != null">description,</if>
            <if test="paramDescription != null">params_desc,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="templateCode != null">#{templateCode},</if>
            <if test="templateName != null">#{templateName},</if>
            <if test="messageType != null">#{messageType},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="iconUrl != null">#{iconUrl},</if>
            <if test="linkTemplate != null">#{linkTemplate},</if>
            <if test="status != null">#{status},</if>
            <if test="description != null">#{description},</if>
            <if test="paramDescription != null">#{paramDescription},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="update" parameterType="org.example.common.entity.MessageTemplate">
        UPDATE t_message_template
        <set>
            <if test="templateCode != null">code = #{templateCode},</if>
            <if test="templateName != null">name = #{templateName},</if>
            <if test="messageType != null">message_type = #{messageType},</if>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="iconUrl != null">icon_url = #{iconUrl},</if>
            <if test="linkTemplate != null">link_template = #{linkTemplate},</if>
            <if test="status != null">status = #{status},</if>
            <if test="description != null">description = #{description},</if>
            <if test="paramDescription != null">params_desc = #{paramDescription},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE t_message_template
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM t_message_template WHERE id = #{id}
    </delete>

    <delete id="batchDelete" parameterType="java.util.List">
        DELETE FROM t_message_template
        WHERE id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>